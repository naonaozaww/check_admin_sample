<aside class="main-sidebar sidebar-dark-primary elevation-4">

  <%= link_to admin_root_path, class: 'brand-link' do %>
    <%= image_tag "AdminLTELogo.png", alt: "AdminLTE Logo", class: "brand-image img-circle elevation-3", style: "opacity: 0.8" %>
    <span class="brand-text font-weight-light">AdminLTE 3</span>
  <% end %>

  <div class="sidebar">
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <%= image_tag current_user.avatar.url,
                      class: 'rounded-circle',
                      id: 'preview',
                      size: '100x100' %>
      </div>
      <div class="info">
        <a href="#" class="d-block">
         <%= current_user.decorate.full_name %>
        </a>
      </div>
    </div>
    
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <li class="nav-item">
          <%= link_to admin_users_path, class: "nav-link #{active_if('admin/users')}", method: :get do %>
            <i class="nav-icon fas fa-user"></i>
            <p>
              User List
            </p>
          <% end %>
        </li>
      </ul>
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <li class="nav-item">
          <%= link_to admin_posts_path, class: "nav-link #{active_if('admin/posts')}", method: :get do %>
            <i class="nav-icon fas fa-file"></i>
            <p>
              Post List
            </p>
          <% end %>
        </li>
      </ul>
  </div>
</aside>
